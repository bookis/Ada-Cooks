<h1>Recipes#new</h1>
<p>Find me in app/views/recipes/new.html.erb</p>

<%= form_tag recipes_path do %>
  <%= label_tag "recipe_form[name]", "Name" %> <br>
  <%= text_field_tag "recipe_form[name]" %> <br>

  <%= label_tag "recipe_form[instructions]", "Instructions" %> <br>
  <%= text_area_tag "recipe_form[instructions]" %> <br>

  <% Ingredient.all.each do |ingredient| %>
    <%= check_box_tag "recipe_form[ingredients][]", ingredient.id%>
    <%= label_tag "recipe_form[ingredients][]", ingredient.name %> <br> <!--to fix, set the label tag "" to be some unique id then add id attribute to check box tag -->
  <% end %>

  <%= label_tag "recipe_form[ingredient][name]", "New Ingredient" %> <br>
  <%= text_field_tag "recipe_form[ingredient][name]" %> <br>

  <%= submit_tag %>
<% end %>
