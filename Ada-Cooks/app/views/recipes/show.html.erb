<h2><%= @recipe.name %></h2>

<h3>Servings</h3>
<p>
  This recipe serves <%= @recipe.servings %>
</p>

<h3>Directions</h3>
<p>
  <%= simple_format(@recipe.instructions)%>
</p>

<h3>Ingredients</h3>
<p>
  <ul>
  <% @ingredients.each do |i| %>
    <li><%= i.name %></li>
  <% end %>
</ul>
</p>

<%= link_to "Edit #{@recipe.name}", edit_recipe_path(@recipe.id) %>
